<h1>Create a new category</h1>

<form class="form new-project-form">
      <div class="form-group">
        <label for="category-title">Blog title:</label>
        <input class="form-input" type="text" id="category-title" name="category-title" />
</div>

{{categories}}

{{#each categories as |category|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h3>{{category.title}}</h3>
      </div>
    </div>
 {{/each}}